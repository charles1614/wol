[Unit]
Description=ASUS WOL Agent - Server Status Monitor
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/asus-agent
Environment=NODE_ENV=production
Environment=API_URL=https://your-vercel-app.vercel.app
Environment=API_SECRET=your-secret-key
ExecStart=/usr/bin/node --import tsx /opt/asus-agent/src/index.ts
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=asus-agent

[Install]
WantedBy=multi-user.target
